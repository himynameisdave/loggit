{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
